---
import DarkVeil from "./ui/backgrounds/DarkVeil/DarkVeil";
import AnimatedButton from "./ui/buttons/AnimatedButton.astro";
import Badge from "./ui/Badge.astro";
import CheckList from "./ui/CheckList.astro";
import TextPressure from "./ui/TextPressure";
import SocialProof from "./SocialProof.astro";

// Checklist items based on requirements
const checklistItems = [
    "PORTFOLIO QUE SE VE PRO (y listo para mandar a clientes)",
    "OFERTA + PACK DE SERVICIOS (qué incluir, cuánto cobrar, cómo presentarlo)",
    "SISTEMA SEMANAL (mejorás + conseguís laburo constante)",
];
---

<section
    class="relative w-full min-h-screen overflow-hidden p-6 bg-black text-white selection:bg-accent/30 selection:text-white font-sans"
>
    <!-- Background Layers -->
    <div class="absolute inset-0 z-0 pointer-events-none">
        <!-- Barbed wire decoration - Hidden on mobile for cleaner look -->
        <img
            src="/assets/resoures/barbed/barbed_wire03.png"
            alt=""
            aria-hidden="true"
            loading="lazy"
            fetchpriority="low"
            decoding="async"
            class="hidden md:block absolute blur-[2px] rotate-45 -right-32 -top-64 w-auto object-contain object-bottom drop-shadow-2xl opacity-20 z-10"
        />
        <img
            src="/assets/resoures/textures/texture.webp"
            alt=""
            aria-hidden="true"
            loading="lazy"
            fetchpriority="low"
            decoding="async"
            class="hidden lg:block absolute blur-[2px] -left-72 rotate-45 mix-blend-screen bottom-0 w-auto object-contain object-bottom drop-shadow-2xl opacity-50 z-10"
        />

        <DarkVeil
            client:idle
            noiseIntensity={0.2}
            scanlineIntensity={0.05}
            speed={0.8}
            scanlineFrequency={150}
            warpAmount={0.3}
            hueShift={10}
        />

        <!-- Vignette & Gradients -->
        <div
            class="absolute inset-0 bg-linear-to-t from-black via-black/20 to-black/60 mix-blend-multiply opacity-90"
        >
        </div>
        <div
            class="absolute inset-0 bg-[radial-gradient(circle_at_center,var(--tw-gradient-stops))] from-indigo-900/20 via-black/60 to-black pointer-events-none"
        >
        </div>
    </div>

    <!-- Hero Image - Background layer on mobile, side on desktop -->
    <div class="absolute inset-0 z-1 pointer-events-none overflow-hidden">
        <!-- Mobile: Centered background image with gradient overlay -->
        <div class="block lg:hidden absolute inset-0">
            <img
                src="/assets/skin_picture.webp"
                alt="Creator"
                loading="eager"
                fetchpriority="high"
                decoding="async"
                class="absolute bottom-0 left-1/2 -translate-x-1/2 h-[85vh] w-auto max-w-none object-contain object-bottom opacity-40 animate-in fade-in slide-in-from-bottom-12 duration-1000"
                style="mask-image: linear-gradient(to bottom, transparent 0%, black 20%, black 70%, transparent 100%);"
            />
            <!-- Extra dark gradient overlay for text readability on mobile -->
            <div
                class="absolute inset-0 bg-linear-to-t from-black via-black/60 to-transparent"
            >
            </div>
        </div>

        <!-- Desktop: Right-aligned image -->
        <div class="hidden lg:block absolute -inset-35">
            <img
                src="/assets/skin_picture.webp"
                alt="Creator"
                loading="eager"
                fetchpriority="high"
                decoding="async"
                class="absolute top-45 h-[180vh] w-auto object-contain object-bottom drop-shadow-[0_0_50px_rgba(0,0,0,0.5)] animate-in fade-in slide-in-from-bottom-24 duration-1000 ease-out xl:right-8 2xl:right-16"
                style="mask-image: linear-gradient(to bottom, black, transparent 100%);"
            />
        </div>
    </div>

    <!-- TextPressure Logo - Desktop only, positioned after image layer -->
    <nav
        class="hidden lg:flex absolute bottom-24 right-0 z-30 p-10 justify-end items-end pointer-events-none"
    >
        <div class="w-64 mb-32 pointer-events-none">
            <TextPressure
                client:idle
                text="SKIN LABS PRO"
                width={true}
                weight={true}
                textColor="#e8bd0d"
                minFontSize={20}
            />
        </div>
    </nav>

    <!-- Main Content -->
    <div
        class="relative z-10 w-full min-h-screen flex flex-col justify-center px-5 sm:px-6 md:px-12 lg:px-16 xl:px-24 py-20 lg:py-0"
    >
        <!-- Content wrapper with max-width for desktop -->
        <div
            class="w-full lg:w-[55%] xl:w-[50%] flex flex-col space-y-5 sm:space-y-6 md:space-y-8 lg:space-y-6"
        >
            <!-- Badge -->
            <div class="animate-in fade-in slide-in-from-left-10 duration-700">
                <Badge text="SISTEMA PROBADO PARA VIVIR DEL DISEÑO" />
            </div>

            <!-- Headlines -->
            <div
                class="animate-in fade-in slide-in-from-bottom-10 duration-700 delay-100"
            >
                <h1
                    class="font-black -tracking-widest text-white leading-[0.9] sm:leading-[0.85]"
                >
                    <span
                        class="block text-3xl sm:text-4xl md:text-5xl lg:text-4xl xl:text-6xl text-transparent bg-clip-text bg-linear-to-br from-white via-gray-200 to-gray-500 font-2 py-2"
                    >
                        VIVÍ <span class="font-light">DE</span>
                        <br />
                        <span class="font-light">TU</span> DISEÑO
                    </span>
                    <span
                        class="block text-2xl sm:text-3xl md:text-4xl lg:text-6xl xl:text-4xl text-accent drop-shadow-[0_0_15px_rgba(234,179,8,0.3)] text-nowrap mt-1"
                    >
                        <span class="font-light">EN</span> 30 DÍAS
                    </span>
                </h1>
            </div>

            <!-- Subtitle -->
            <p
                class="text-sm sm:text-base md:text-xs text-gray-300 font-medium max-w-xl lg:max-w-2xl animate-in fade-in slide-in-from-bottom-10 duration-700 delay-200 leading-relaxed"
            >
                Armá tu <span class="text-white font-bold">marca personal</span
                >, tu <span class="text-white font-bold">portfolio</span> y una oferta
                que <span class="text-white font-bold">cierre clientes</span>.
                <br />
                Clases <span class="text-accent font-bold">+</span> correcciones grupales
                <span class="text-accent font-bold">+</span> comunidad <span
                    class="text-accent font-bold">+</span
                > grabaciones
            </p>

            <!-- Checklist - Simplified for mobile -->
            <div
                class="animate-in fade-in slide-in-from-bottom-10 duration-700 delay-300"
            >
                <CheckList items={checklistItems} />
            </div>

            <!-- CTA -->
            <div
                class="flex flex-col items-start gap-3 sm:gap-4 animate-in fade-in slide-in-from-bottom-10 duration-700 delay-400 pt-2"
            >
                <AnimatedButton
                    title="CONVERTIRME EN DISEÑADOR PRO"
                    highlight="DISEÑADOR PRO"
                    class="text-sm sm:text-base md:text-lg px-5 sm:px-6 md:px-8 py-3 sm:py-4"
                    onclick="document.getElementById('pricing')?.scrollIntoView({ behavior: 'smooth' })"
                />
                <span class="text-xs text-accent/80 font-medium">
                    Pago único. Acceso inmediato.
                </span>
            </div>
        </div>
    </div>

    <!-- Decorative Tapes - Hidden on mobile -->
    <img
        src="/assets/resoures/tapes/tape_02.webp"
        alt=""
        aria-hidden="true"
        loading="lazy"
        decoding="async"
        class="hidden md:block w-32 lg:w-44 rotate-90 absolute -bottom-40 left-4 lg:-left-28 z-30 opacity-20 pointer-events-none"
    />

    <!-- Desktop Social Proof -->
    <div class="hidden lg:block">
        <SocialProof />
    </div>

    <!-- Mobile Social Proof - Simplified version -->
    <div class="block lg:hidden">
        <SocialProof />
    </div>
</section>
