---
import DarkVeil from "./ui/backgrounds/DarkVeil/DarkVeil";
import AnimatedButton from "./ui/buttons/AnimatedButton.astro";
import Badge from "./ui/Badge.astro";
import CheckList from "./ui/CheckList.astro";
import SocialProofBar from "./ui/SocialProofBar.astro";
import TextPressure from "./ui/TextPressure";
import SocialProof from "./SocialProof.astro";

// Checklist items based on requirements
const checklistItems = [
    "Diseño gráfico profesional aplicado a eventos",
    "Workflow + sistema repetible (cómo diseñar mejor y más rápido)",
    "Monetización y oferta para eventos (cómo cobrar y recuperar la inversión)",
];
---

<section
    class="relative pt-16 w-full min-h-screen pb-24 overflow-hidden overflow-x-hidden bg-black text-white selection:bg-yellow-500/30 selection:text-yellow-200 font-sans"
>
    <!-- Background Layers -->
    <div class="absolute inset-0 z-0 pointer-events-none">
        <!-- Barbed wire decoration -->
        <img
            src="/assets/resoures/barbed/barbed_wire03.png"
            alt="Barbed Wire"
            loading="lazy"
            fetchpriority="low"
            decoding="async"
            class="absolute blur-[2px] rotate-45 -right-32 -top-64 w-auto object-contain object-bottom drop-shadow-2xl opacity-20 z-10"
        />
        <img
            src="/assets/resoures/textures/texture.webp"
            alt="Barbed Wire"
            loading="lazy"
            fetchpriority="low"
            decoding="sync"
            class="absolute blur-[2px] -left-72 rotate-45 mix-blend-screen bottom-0 w-auto object-contain object-bottom drop-shadow-2xl opacity-50 z-10"
        />

        <DarkVeil
            client:idle
            noiseIntensity={0.2}
            scanlineIntensity={0.05}
            speed={0.8}
            scanlineFrequency={150}
            warpAmount={0.3}
            hueShift={10}
        />

        <!-- Vignette & Gradients -->
        <div
            class="absolute inset-0 bg-linear-to-t from-black via-black/20 to-black/60 mix-blend-multiply opacity-90"
        >
        </div>
        <div
            class="absolute inset-0 bg-[radial-gradient(circle_at_center,var(--tw-gradient-stops))] from-indigo-900/20 via-black/60 to-black pointer-events-none"
        >
        </div>
    </div>

    <!-- Navbar Placeholder -->
    <nav
        class="absolute bottom-24 right-0 z-30 p-8 md:p-10 flex justify-end items-end pointer-events-none"
    >
        <div class="w-48 md:w-64 mb-32 pointer-events-none">
            <TextPressure
                client:idle
                text="SKIN LABS PRO"
                width={true}
                weight={true}
                textColor="#facc15"
                minFontSize={20}
            />
        </div>
    </nav>

    <!-- Main Content Grid -->
    <div
        class="relative z-10 w-full min-h-screen flex flex-col lg:flex-row items-start mx-auto pt-24 lg:pt-0 overflow-visible"
    >
        <!-- Left Column: Typography / Offer -->
        <div
            class="w-full lg:w-[55%] flex flex-col justify-around px-6 md:px-12 lg:pl-16 xl:pl-24 space-y-8 md:space-y-10 z-20 lg:pb-0"
        >
            <!-- Badge -->
            <div class="animate-in fade-in slide-in-from-left-10 duration-700">
                <Badge text="Método probado en trabajos reales" />
            </div>

            <!-- Headlines -->
            <div
                class="animate-in fade-in slide-in-from-bottom-10 duration-700 delay-100"
            >
                <h1
                    class="text-2xl sm:text-4xl md:text-4xl lg:text-4xl xl:text-6xl font-black tracking-tighter text-white"
                >
                    <span
                        class="block text-transparent bg-clip-text bg-linear-to-br from-white via-gray-200 to-gray-500"
                    >
                        De 0 a PRO
                    </span>
                    <span
                        class="text-3xl sm:text-4xl lg:text-5xl block text-yellow-500 drop-shadow-[0_0_15px_rgba(234,179,8,0.3)]"
                    >
                        VIVÍ DEL DISEÑO GRÁFICO.
                    </span>
                </h1>
            </div>

            <!-- Subtitle -->
            <p
                class="text-base md:text-lg lg:text-lg text-gray-300 font-medium max-w-2xl animate-in fade-in slide-in-from-bottom-10 duration-700 delay-200"
            >
                Convertite en diseñador PRO y comenza a trabajar <br /> con
                <span class="text-white font-bold">marcas y eventos</span> en solo
                30 días.
            </p>

            <!-- Checklist -->
            <div
                class="animate-in fade-in slide-in-from-bottom-10 duration-700 delay-300"
            >
                <CheckList items={checklistItems} />
            </div>

            <!-- CTA -->
            <div
                class="flex flex-col sm:flex-row items-start gap-6 animate-in fade-in slide-in-from-bottom-10 duration-700 delay-400"
            >
                <div class="flex flex-col gap-2 justify-center items-end">
                    <AnimatedButton
                        title="CONVERTIRME EN DISEÑADOR PRO"
                        class="text-lg px-8 py-4"
                    />
                    <span
                        class="text-xs text-yellow-500/80 font-medium flex items-center justify-end"
                    >
                        <span class="block">Pago único. Acceso inmediato.</span>
                    </span>
                </div>

                <!-- Right Column: Image (Floating) -->
                <div
                    class="relative w-full lg:w-[45%] h-[50vh] lg:h-screen flex items-end justify-center lg:justify-end pointer-events-none z-10 lg:absolute lg:right-0 lg:bottom-0"
                >
                </div>

                <!-- Social Bar (Mobile) -->
                <div
                    class="w-full px-6 pb-12 block lg:hidden z-20 relative bg-black/80 backdrop-blur-sm border-t border-white/10"
                >
                    <SocialProofBar />
                </div>
            </div>
            <!-- Glow backing -->

            <img
                src="/assets/skin_picture.webp"
                alt="Creator"
                loading="eager"
                fetchpriority="high"
                decoding="async"
                class="absolute z-0 h-full right-0 top-56 scale-150 drop-shadow-[0_0_50px_rgba(0,0,0,0.5)] animate-in fade-in slide-in-from-bottom-24 duration-1000 ease-out lg:mr-[-50px] xl:mr-0"
                style="mask-image: linear-gradient(to bottom, black, transparent 100%);"
            />

            <!-- <div
                class="absolute bottom-0 right-1/2 translate-x-1/2 lg:translate-x-0 lg:right-[-10%] w-[120%] h-[80%] bg-blue-900/30 rounded-full blur-[100px] mix-blend-screen animate-pulse z-10"
            >
            </div> -->
            <!-- Decorative Tapes -->
            <img
                src="/assets/resoures/tapes/tape_02.webp"
                alt="Tape"
                loading="lazy"
                decoding="async"
                class="w-32 lg:w-44 rotate-90 absolute -bottom-40 -left-28 z-30 opacity-20 pointer-events-none"
            />
        </div>
    </div>
    <SocialProof />
</section>
