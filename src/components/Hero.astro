---
import DarkVeil from "./ui/backgrounds/DarkVeil/DarkVeil";
import AnimatedButton from "./ui/buttons/AnimatedButton.astro";
import Badge from "./ui/Badge.astro";
import CheckList from "./ui/CheckList.astro";
import TextPressure from "./ui/TextPressure";
import SocialProof from "./SocialProof.astro";

// Checklist items based on requirements
const checklistItems = [
    "PORTFOLIO QUE SE VE PRO (y listo para mandar a clientes)",
    "OFERTA + PACK DE SERVICIOS (qué incluir, cuánto cobrar, cómo presentarlo)",
    "SISTEMA SEMANAL (mejorás + conseguís trabajo constante)",
];
---

<section
    class="relative pt-10 md:pt-0 w-full min-h-screen overflow-hidden bg-black text-white selection:bg-accent/30 selection:text-white font-sans bg-[url('/assets/resources/textures/texture_bg.webp')] bg-cover bg-center"
    style="mask-image: linear-gradient(to bottom, transparent 0%, black 10%, black 90%, transparent 100%); -webkit-mask-image: linear-gradient(to bottom, transparent 0%, black 10%, black 90%, transparent 100%);"
>
    <!-- Desktop only: AI and PS logos -->
    <img
        src="/assets/resources/logos/logo_AI.webp"
        alt="AI Logo"
        width="200"
        height="320"
        loading="eager"
        fetchpriority="high"
        decoding="async"
        class="hidden md:block absolute top-72 h-80 right-0 opacity-40 w-auto object-contain object-bottom animate-in fade-in slide-in-from-bottom-24 duration-1000 ease-out"
    />
    <img
        src="/assets/resources/logos/logo_PS.webp"
        alt="PS Logo"
        width="200"
        height="320"
        loading="eager"
        fetchpriority="high"
        decoding="async"
        class="hidden md:block absolute top-72 h-80 right-80 -rotate-12 opacity-40 w-auto object-contain object-bottom animate-in fade-in slide-in-from-bottom-24 duration-1000 ease-out"
    />

    <!-- Hero Image - Mobile: right side with fade mask -->
    <img
        src="/assets/skin_picture_2.webp"
        alt="Creator"
        width="1920"
        height="1080"
        loading="eager"
        fetchpriority="high"
        decoding="async"
        class="absolute top-0 right-[15%] hidden md:block md:right-0 h-[65vh] md:h-screen w-screen object-cover object-top md:object-bottom animate-in fade-in duration-700 ease-out hero-image-mobile md:top-10 z-20 md:z-auto"
    />
    <img
        src="/assets/skin_picture_2.webp"
        alt="Creator"
        width="800"
        height="1200"
        loading="eager"
        fetchpriority="high"
        decoding="async"
        class="absolute md:hidden top-0 right-0 h-[85vh] min-w-[180vw] object-cover object-top hero-image-mobile z-20"
    />

    <!-- TextPressure Logo - Desktop only -->
    <nav
        class="hidden lg:flex absolute bottom-24 right-0 z-30 p-10 justify-end items-end pointer-events-none"
    >
        <div class="w-64 mb-32 pointer-events-none">
            <TextPressure
                client:idle
                text="SKIN LABS PRO"
                width={true}
                weight={true}
                textColor="#e8bd0d"
                minFontSize={20}
            />
        </div>
    </nav>

    <!-- Main Content -->
    <!-- Removed z-10 to allow image (z-0 but physically after in typical stacking or handled via specific z-indexes) interaction. 
         Wait, image has z-0. Content needs to be readable. 
         User wanted text "por debajo" (under). If visual under: z-index text < z-index image. 
         Image is masked, so text will be visible through mask. -->
    <div
        class="relative w-full min-h-screen flex flex-col justify-start md:justify-center px-4 md:px-12 lg:px-16 xl:px-24 pt-6 pb-8 md:py-0"
    >
        <!-- Content wrapper -->
        <div
            class="w-full md:w-full lg:w-[55%] xl:w-[50%] flex flex-col space-y-10 md:space-y-6 lg:space-y-6 relative"
        >
            <!-- Badge -->
            <div
                class="animate-in fade-in slide-in-from-left-10 duration-700 relative z-30"
            >
                <Badge text="SISTEMA PROBADO PARA VIVIR DEL DISEÑO" />
            </div>

            <!-- Headlines -->
            <div class="relative z-10">
                <h1
                    class="font-black -tracking-widest text-white leading-[0.95] md:leading-[0.85] -z-10"
                >
                    <span
                        class="block text-4xl md:text-5xl lg:text-4xl xl:text-6xl bg-clip-text bg-linear-to-br -tracking-widest text-white font-2 py-1 md:py-2"
                    >
                        VIVÍ <span class="font-light">DE</span>
                        <br />
                        <span class="font-light">TU</span> DISEÑO
                    </span>
                    <span
                        class="block md:text-4xl lg:text-6xl xl:text-4xl text-accent drop-shadow-[0_0_15px_rgba(234,179,8,0.3)] text-nowrap mt-0.5 md:mt-1"
                    >
                        <span class="font-light">EN</span> 30 DÍAS
                    </span>
                </h1>
            </div>

            <!-- Subtitle -->
            <p
                class="text-[8px] md:text-sm lg:text-xs text-gray-300 font-medium max-w-[90%] md:max-w-xl lg:max-w-2xl animate-in fade-in slide-in-from-bottom-10 duration-700 delay-200 leading-relaxed relative z-30"
            >
                Armá tu <span class="text-white font-bold">marca personal</span
                >, tu <span class="text-white font-bold">portfolio</span>
                <br class="md:hidden" />
                y una oferta que <span class="text-white font-bold"
                    >cierre clientes</span
                >.
                <br />
                Clases <span class="text-accent font-bold">+</span> correcciones grupales
                <span class="text-accent font-bold">+</span> comunidad <span
                    class="text-accent font-bold">+</span
                > grabaciones
            </p>

            <!-- Checklist -->
            <div
                class="animate-in fade-in slide-in-from-bottom-10 duration-700 delay-300 relative z-30"
            >
                <CheckList items={checklistItems} />
            </div>

            <!-- CTAs - Mobile specific design -->
            <div
                class="flex flex-col items-start gap-2 md:gap-4 animate-in fade-in slide-in-from-bottom-10 duration-700 delay-400 pt-1 md:pt-2"
            >
                <!-- Desktop CTA -->
                <div class="hidden md:block">
                    <AnimatedButton
                        title="CONVERTIRME EN DISEÑADOR PRO"
                        highlight="DISEÑADOR PRO"
                        class="text-sm sm:text-base md:text-lg px-5 sm:px-6 md:px-8 py-3 sm:py-4"
                        onclick="document.getElementById('pricing')?.scrollIntoView({ behavior: 'smooth' })"
                    />
                    <span class="block text-xs text-accent/80 font-medium mt-2">
                        Pago único. Acceso inmediato.
                    </span>
                </div>

                <!-- Mobile CTAs -->
                <div class="flex flex-col gap-2 md:hidden w-full relative z-30">
                    <button
                        class="w-full max-w-full px-4 py-3 border border-white/30 rounded-lg text-white font-medium text-sm tracking-wide hover:border-white/50 transition-colors bg-black/40 backdrop-blur-sm"
                        onclick="document.getElementById('pricing')?.scrollIntoView({ behavior: 'smooth' })"
                    >
                        QUIERO <span class="text-accent font-bold"
                            >ENTRAR AL MES</span
                        >
                    </button>
                    <button
                        class="w-full max-w-full px-4 py-3 border border-white/30 rounded-lg text-white font-medium text-sm tracking-wide hover:border-white/50 transition-colors bg-black/40 backdrop-blur-sm"
                        onclick="document.getElementById('pricing')?.scrollIntoView({ behavior: 'smooth' })"
                    >
                        <span class="text-accent font-bold">VER PLANES</span> (USD
                        300 / USD 600)
                    </button>
                </div>

                <!-- Mobile info bullets -->
                <div class="flex flex-col gap-1 mt-2 md:hidden relative z-30">
                    <span class="text-[11px] text-white/90 font-medium">
                        • <span class="text-accent font-bold">CUOTAS</span> CON MERCADOPAGO
                    </span>
                    <span class="text-[11px] text-white/90 font-medium">
                        • <span class="text-accent font-bold">ACCESO</span> INMEDIATO
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Decorative Tapes - Hidden on mobile -->
    <img
        src="/assets/resources/tapes/tape_02.webp"
        alt=""
        aria-hidden="true"
        loading="lazy"
        decoding="async"
        class="hidden md:block w-32 lg:w-44 rotate-90 absolute -bottom-40 left-4 lg:-left-28 z-30 opacity-20 pointer-events-none"
    />

    <!-- Desktop Social Proof -->
    <div class="hidden lg:block">
        <SocialProof />
    </div>

    <!-- Mobile Social Proof -->
    <div class="block lg:hidden">
        <SocialProof />
    </div>
</section>

<style>
    /* Mobile image mask effect - fade from left and bottom */
    .hero-image-mobile {
        mask-image:
            linear-gradient(to right, transparent 0%, black 40%),
            linear-gradient(to bottom, black 50%, transparent 100%);
        -webkit-mask-image:
            linear-gradient(to right, transparent 0%, black 40%),
            linear-gradient(to bottom, black 50%, transparent 100%);
        mask-composite: intersect;
        -webkit-mask-composite: source-in;
    }

    @media (min-width: 768px) {
        .hero-image-mobile {
            mask-image: none;
            -webkit-mask-image: none;
        }
    }
</style>
