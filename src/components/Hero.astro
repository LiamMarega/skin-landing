---
import type { lazy } from "astro:schema";
import DarkVeil from "./ui/backgrounds/DarkVeil/DarkVeil";
import AnimatedButton from "./ui/buttons/AnimatedButton.astro";
import TextPressure from "./ui/TextPressure";
---

<section
    class="relative w-full h-screen overflow-hidden bg-black text-white selection:bg-blue-600 selection:text-white font-sans"
>
    <img
        src="/assets/resoures/barbed/barbed_wire03.png"
        alt="Creator"
        class="absolute blur-xs h-[15%] md:h-[140%] rotate-45 -right-32 -top-64 w-auto object-contain object-bottom drop-shadow-2xl animate-in fade-in slide-in-from-top-20 duration-1000 ease-out z-10"
        style="mask-image: linear-gradient(to bottom, black 80%, transparent 100%);"
    />
    <!-- Background Layers -->
    <div class="absolute inset-0 z-0 pointer-events-none">
        <!-- Animated Background -->
        <DarkVeil
            client:load
            noiseIntensity={0.3}
            scanlineIntensity={0.05}
            speed={0.7}
            scanlineFrequency={100}
            warpAmount={0.5}
        />

        <!-- Dark Gradient Overlay for Depth -->
        <div
            class="absolute inset-0 bg-gradient-to-t from-black via-black/40 to-transparent mix-blend-multiply opacity-90"
        >
        </div>
    </div>

    <!-- Main Content Grid -->
    <div
        class="relative z-10 w-full h-full max-w-[1400px] mx-auto px-6 flex flex-col md:flex-row items-center justify-center md:justify-between pt-20 md:pt-0"
    >
        <!-- Typography / Offer Side -->
        <div
            class="lex flex-col items-center md:items-start text-center md:text-left z-20 space-y-8 max-w-4xl"
        >
            <!-- Headline -->
            <div class="space-y-0">
                <h1
                    class="flex flex-col font-black italic uppercase tracking-tighter"
                >
                    <span
                        class="text-[3rem] sm:text-[3rem] md:text-[4rem] lg:text-[4rem] text-transparent bg-clip-text bg-linear-to-b from-white via-white to-gray-600 drop-shadow-2xl filter brightness-110 tracking-tight"
                    >
                        DISEÑO GRÁFICO + <span class="text-3d"> 3D </span>
                    </span>
                    <span class="relative inline-block -mt-6 -ml-4 w-[70%]">
                        <TextPressure
                            client:load
                            text="PARA EVENTOS"
                            width={true}
                            weight={true}
                            textColor="#ffffff"
                            strokeColor="#3b82f6"
                            minFontSize={36}
                        />
                    </span>
                </h1>
            </div>

            <!-- Simplified Value Prop -->
            <p
                class="text-xl md:text-2xl text-gray-300 font-medium leading-relaxed max-w-xl"
            >
                El sistema exacto para vivir del diseño y conseguir clientes
                reales en <span class="text-white font-bold">30 días</span>.
            </p>

            <!-- CTA -->
            <div class="flex flex-col sm:flex-row items-center gap-8 mt-2">
                <div class="flex items-center">
                    <AnimatedButton title="ACCESO INMEDIATO" />
                </div>
            </div>
        </div>

        <!-- Image Side (Floating) -->
        <div
            class="absolute md:relative md:w-1/2 h-[60vh] md:h-full bottom-0 md:bottom-auto md:right-0 overflow-visible pointer-events-none mt-auto flex items-end justify-center md:justify-end"
        >
            <!-- Glow Effect -->
            <div
                class="absolute bottom-0 right-0 md:right-10 w-[300px] md:w-[600px] h-[300px] md:h-[600px] bg-blue-600/20 rounded-full blur-[80px] md:blur-[120px] mix-blend-screen animate-pulse duration-[3000ms]"
            >
            </div>

            <img
                src="/assets/skin_picture.png"
                alt="Creator"
                class="relative mb-24 h-[85%] md:h-full w-auto object-contain object-bottom drop-shadow-2xl z-10 animate-in fade-in slide-in-from-bottom-20 duration-1000 ease-out"
                style="mask-image: linear-gradient(to bottom, black 80%, transparent 100%);"
            />
        </div>
    </div>
    <img
        src="/assets/resoures/tapes/tape_02.webp"
        alt="Tape"
        style="mask-image: linear-gradient(to bottom, black 80%, transparent 100%);"
        class="w-44 rotate-90 absolute -bottom-10 -left-20 z-10 opacity-15"
    />
    <img
        src="/assets/resoures/tapes/tape_02.webp"
        alt="Tape"
        style="mask-image: linear-gradient(to bottom, black 80%, transparent 100%);"
        class="w-44 absolute -top-10 -right-20 z-10 opacity-15"
    />
</section>

<style>
    .text-3d {
        display: inline-block;
        color: #fff;
        text-shadow:
            3px 3px 0px #e8bd0d,
            4px 4px 0px #e8bd0d,
            5px 5px 0px #ca8a04,
            6px 6px 0px #ca8a04,
            7px 7px 0px #a16207,
            8px 8px 15px rgba(0, 0, 0, 0.9);
        transform: perspective(1000px) rotateY(-15deg) rotateX(10deg)
            skewX(-10deg);
        filter: drop-shadow(0 0 20px rgba(232, 189, 13, 0.3));
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        cursor: default;
    }

    .text-3d:hover {
        transform: perspective(1000px) rotateY(-20deg) rotateX(15deg)
            skewX(-15deg) scale(1.1);
        text-shadow:
            3px 3px 0px #e8bd0d,
            4px 4px 0px #e8bd0d,
            5px 5px 0px #ca8a04,
            6px 6px 0px #ca8a04,
            7px 7px 0px #a16207,
            8px 8px 0px #854d0e,
            9px 9px 0px #854d0e,
            12px 12px 25px rgba(0, 0, 0, 1);
        filter: drop-shadow(0 0 30px rgba(232, 189, 13, 0.6));
    }
</style>
