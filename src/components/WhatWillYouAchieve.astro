<section class="relative w-full py-24 bg-black overflow-hidden font-sans">
    <div class="max-w-5xl mx-auto px-6 relative z-10">
        <!-- Section Header -->
        <h2
            class="text-4xl md:text-6xl font-black text-center mb-16 italic uppercase tracking-tighter text-transparent bg-clip-text bg-gradient-to-b from-blue-400 to-white drop-shadow-[0_0_15px_rgba(59,130,246,0.5)]"
        >
            ¿Qué vas a <span class="text-blue-500">Lograr?</span>
        </h2>

        <!-- Content Box -->
        <div class="relative group">
            <!-- Glassmorphism Container -->
            <div
                class="relative z-10 bg-blue-900/10 backdrop-blur-xl border border-blue-500/30 rounded-3xl p-8 md:p-12 overflow-hidden hover:border-blue-500/50 transition-colors duration-500"
            >
                <!-- Inner Glow -->
                <div
                    class="absolute inset-0 bg-blue-500/5 blur-[100px] pointer-events-none"
                >
                </div>

                <div class="flex flex-col gap-6 text-center">
                    <h3
                        class="text-2xl md:text-4xl font-black text-white uppercase italic leading-tight"
                    >
                        Efectos Premium + Flujo de Trabajo <span
                            class="text-yellow-400">PRO</span
                        >
                    </h3>

                    <p
                        class="text-lg md:text-2xl text-gray-300 font-medium leading-relaxed max-w-3xl mx-auto"
                    >
                        Para que tus diseños se vean más <span
                            class="text-white font-bold">caros</span
                        > y más <span class="text-white font-bold">limpios</span
                        >.
                    </p>

                    <div
                        class="w-full h-px bg-gradient-to-r from-transparent via-blue-500/50 to-transparent my-4"
                    >
                    </div>

                    <p
                        class="text-base md:text-xl text-blue-200 uppercase tracking-widest font-bold"
                    >
                        Ideal para: flyers, posteos, miniaturas y piezas para
                        clientes
                    </p>
                </div>
            </div>

            <!-- Decorative Elements -->
            <div
                class="absolute -top-10 -left-10 w-40 h-40 bg-blue-600/30 rounded-full blur-[50px] mix-blend-screen animate-pulse"
            >
            </div>
            <div
                class="absolute -bottom-10 -right-10 w-40 h-40 bg-purple-600/30 rounded-full blur-[50px] mix-blend-screen animate-pulse delay-700"
            >
            </div>
        </div>
    </div>
</section>
