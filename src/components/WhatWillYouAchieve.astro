---
import GradientBlinds from "./ui/backgrounds/GradientBlinds/GradientBlinds";
import SpotlightCard from "./ui/Cards/SpotlightCard/SpotlightCard";
import { Icon } from "astro-icon/components";

const cards = [
    {
        title: "Diseño",
        titleHighlight: "PRO",
        description: [
            { text: "Flyers que ", bold: "venden" },
            { text: ' (no solo "bonitos").' },
            {
                text: "Tipografía con jerarquía y flow profesional.",
                separator: true,
            },
            { text: "Fotomontajes realistas de alto nivel.", separator: true },
        ],
        icon: "lucide:palette",
        spotlightColor: "rgba(59, 130, 246, 0.15)",
        accentColor: "text-blue-500",
        iconBg: "bg-blue-500/10",
        iconColor: "text-blue-400",
        borderHover: "hover:border-blue-500/50",
        shadow: "bg-blue-500/10",
    },
    {
        title: "Sistema",
        titleHighlight: "Veloz",
        description: [
            { text: "Método repetible anti-bloqueo creativo." },
            {
                text: "Workflow para diseñar ",
                bold: "x2 más rápido",
                separator: true,
            },
            {
                text: "Solución de problemas técnicos al instante.",
                separator: true,
            },
        ],
        icon: "lucide:zap",
        spotlightColor: "rgba(234, 179, yellow, 0.15)",
        accentColor: "text-yellow-500",
        iconBg: "bg-yellow-500/10",
        iconColor: "text-yellow-500",
        borderHover: "hover:border-yellow-500/50",
        shadow: "bg-yellow-500/10",
    },
    {
        title: "Dinero",
        titleHighlight: "Real",
        description: [
            { text: "Oferta clara y packs de precios definidos." },
            {
                text: "Estrategia para ",
                bold: "recuperar tu inversión",
                separator: true,
            },
            { text: "Cómo fidelizar clientes recurrentes.", separator: true },
        ],
        icon: "lucide:trending-up",
        spotlightColor: "rgba(34, 197, 94, 0.15)",
        accentColor: "text-green-500",
        iconBg: "bg-green-500/10",
        iconColor: "text-green-500",
        borderHover: "hover:border-green-500/50",
        shadow: "bg-green-500/10",
    },
];
---

<section
    class="relative w-full py-24 bg-black overflow-hidden font-sans flex flex-col justify-center items-center"
>
    <div class="max-w-7xl relative z-10 w-full px-6 text-center">
        <!-- Section Header -->
        <h2
            class="text-4xl md:text-6xl font-black mb-8 italic uppercase tracking-tighter text-white"
        >
            Resultados <span
                class="text-transparent bg-clip-text bg-linear-to-r from-blue-400 to-blue-600 drop-shadow-[0_0_15px_rgba(59,130,246,0.5)]"
                >CONCRETOS</span
            >
        </h2>

        <p class="text-lg text-gray-400 max-w-2xl mx-auto mb-20">
            No es teoría suelta. Es un sistema integral para que mejores tu
            diseño, optimices tu tiempo y generes ingresos reales.
        </p>

        <!-- Cards Grid -->
        <div class="grid md:grid-cols-3 gap-8 relative">
            <!-- Background Layers -->
            <div
                class="absolute inset-0 z-0 pointer-events-none overflow-hidden -mx-40 -my-20"
            >
                <!-- <GradientBlinds
                    client:idle
                    gradientColors={["#07194c", "#0c3e80", "#000000"]}
                    blindCount={12}
                    mixBlendMode="screen"
                    spotlightOpacity={0.2}
                    angle={20}
                    mouseDampening={0.5}
                /> -->
            </div>

            {
                cards.map((card) => (
                    <SpotlightCard
                        client:load
                        spotlightColor={card.spotlightColor}
                        className="relative z-10 h-full group"
                    >
                        <div
                            class={`absolute inset-0 ${card.shadow} blur-2xl opacity-0 group-hover:opacity-50 transition-opacity duration-500 pointer-events-none`}
                        />

                        <div class="relative flex flex-col h-full">
                            <div
                                class={`w-14 h-14 ${card.iconBg} rounded-2xl flex items-center justify-center  ${card.iconColor} group-hover:scale-110 transition-transform duration-300`}
                            >
                                <Icon name={card.icon} class="w-7 h-7" />
                            </div>

                            <h4 class="text-2xl font-bold text-white uppercase tracking-wide mb-6 text-left">
                                {card.title}{" "}
                                <span class={card.accentColor}>
                                    {card.titleHighlight}
                                </span>
                            </h4>

                            <ul class="space-y-4 text-gray-400 grow text-left">
                                {card.description.map((item, idx) => (
                                    <li class="flex items-start gap-3">
                                        <span
                                            class={`${card.accentColor} text-lg`}
                                        >
                                            <Icon
                                                name="lucide:check"
                                                class="inline w-5 h-5 translate-y-[-2px]"
                                            />
                                        </span>
                                        <span>
                                            {item.text}
                                            {item.bold && (
                                                <strong class="text-white font-medium">
                                                    {item.bold}
                                                </strong>
                                            )}
                                        </span>
                                    </li>
                                ))}
                            </ul>
                        </div>
                    </SpotlightCard>
                ))
            }
        </div>
    </div>
</section>
