---
const {
    tipo,
    clases,
    caracteristicas,
    precio,
    precioAnterior,
    badge,
    dataPlan,
    btnText,
    accentColor = "var(--accent)", // Use global accent color (Yellow)
    tapeImage = "/assets/resources/tapes/tape_03.webp",
} = Astro.props;
---

<!-- Added mb-16 for mobile spacing, h-full for equal height flex items -->
<div
    class="urban-card-wrapper group relative w-full max-w-[440px] lg:max-w-[480px] mx-auto overflow-visible mb-16 lg:mb-0 flex flex-col justify-between max-h-[80vh]"
>
    {
        badge && (
            <div class="absolute -right-6 -top-6 sm:-right-10 sm:-top-10 w-20 h-20 sm:w-32 sm:h-32 z-30 opacity-90 group-hover:opacity-100 group-hover:scale-110 group-hover:rotate-[20deg] transition-all duration-500">
                <img
                    src={badge}
                    class="w-full h-full object-contain drop-shadow-2xl"
                    alt="badge"
                />
            </div>
        )
    }

    <img
        src="/assets/resources/spray/spray_01.webp"
        alt=""
        loading="lazy"
        decoding="async"
        class="absolute -top-20 -left-10 lg:w-96 -z-10 group-hover:opacity-100 opacity-70 group-hover:scale-110 transition-all duration-300 pointer-events-none"
    />
    <img
        src="/assets/resources/spray/spray_02.webp"
        alt=""
        loading="lazy"
        decoding="async"
        class="absolute -bottom-20 -left-10 lg:w-96 -z-10 group-hover:opacity-100 opacity-70 group-hover:scale-110 transition-all duration-300 pointer-events-none"
    />

    <!-- Urban Header -->
    <div class="urban-header relative z-20 shrink-0">
        <div
            class="header-content bg-[#0a0a0a] sm:py-6 lg:py-8 px-4 sm:px-6 rounded-t-3xl text-center"
        >
            <h2
                class="tipo-title text-2xl sm:text-3xl lg:text-4xl font-black text-white italic tracking-tight leading-none group-hover:scale-105 transition-transform duration-300"
            >
                {tipo}
            </h2>
            <div
                class="flex items-center justify-center gap-2 sm:gap-3 mt-2 sm:mt-4"
            >
                <span
                    class="h-[2px] w-6 sm:w-10 bg-current opacity-70"
                    style={`color: ${accentColor}`}></span>
                <h3
                    class="clases-subtitle text-xs sm:text-sm lg:text-lg font-bold uppercase tracking-widest sm:tracking-[0.15em]"
                    style={`color: ${accentColor};`}
                >
                    {clases}
                </h3>
                <span
                    class="h-[2px] w-6 sm:w-10 bg-current opacity-70"
                    style={`color: ${accentColor}`}></span>
                <!-- Torn Edge Simulation -->
                <div
                    class="absolute torn-edge w-full h-5 sm:h-12 -bottom-5 z-20 pointer-events-none"
                >
                    <div
                        class="w-full h-full bg-[#0a0a0a]"
                        style="
                    mask-image: url('/assets/resources/rips/paper_rip_01.png');
                    mask-size: 100% 100%;
                    mask-repeat: no-repeat;
                    -webkit-mask-image: url('/assets/resources/rips/paper_rip_01.png');
                    -webkit-mask-size: 100% 100%;
                    -webkit-mask-repeat: no-repeat;
                "
                    >
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Urban Body (Flex grow to fill space) -->
    <div
        class="urban-body relative bg-zinc-50 px-4 sm:px-6 lg:px-8 pt-4 sm:pt-6 lg:pt-8 pb-16 sm:pb-16 lg:pb-16 shadow-2xl overflow-hidden grow flex flex-col"
        style="font-family: 'Aniko', sans-serif;"
    >
        <!-- Rugged Texture Overlay -->
        <div
            class="absolute inset-0 opacity-10 mix-blend-overlay pointer-events-none bg-[url('/assets/resources/textures/texture_02.webp')] bg-cover"
        >
        </div>
        <div
            class="noise-overlay absolute inset-0 opacity-[0.05] pointer-events-none"
        >
        </div>

        <ul
            class="feature-list relative z-10 space-y-2 sm:space-y-3 lg:space-y-5 grow"
        >
            {
                caracteristicas.map((item: any) => (
                    <li class="flex items-start gap-2 sm:gap-3 lg:gap-4 group/item">
                        <span
                            class="text-base sm:text-lg lg:text-xl font-black leading-none mt-0.5 sm:mt-1 transition-transform group-hover/item:scale-125 duration-200 shrink-0"
                            style={`color: ${accentColor}`}
                        >
                            âœ“
                        </span>
                        <p
                            class="text-black font-medium text-[10px] sm:text-xs lg:text-sm leading-snug uppercase tracking-tight  transition-colors"
                            set:html={item.texto.replace(
                                item.bold,
                                `<span class="urban-marker text-black font-black" style="--marker-color: ${accentColor}">${item.bold}</span>`,
                            )}
                        />
                    </li>
                ))
            }
        </ul>

        <!-- Urban CTA Button (Brutalist) -->
        <div class="mt-4 sm:mt-6 lg:mt-10 relative z-20">
            <button
                type="button"
                data-plan={dataPlan}
                class="cursor-pointer urban-btn pricing-btn relative w-full py-2 sm:py-3 lg:py-4 bg-primary text-white font-black text-xs sm:text-base lg:text-lg uppercase tracking-tighter overflow-hidden transform group-hover:-translate-y-1 transition-all duration-300 border-2 sm:border-4 border-white shadow-[0_4px_0_rgba(0,0,0,0.5)] sm:shadow-[0_8px_0_rgba(0,0,0,0.5)] active:shadow-none active:translate-y-1"
            >
                <span
                    class="relative z-10 group-hover:tracking-widest transition-all duration-300"
                    >{btnText || "APLICAR AHORA"}</span
                >
                <div
                    class="absolute inset-0 bg-linear-to-r from-transparent via-black/10 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700"
                >
                </div>
            </button>
        </div>
    </div>

    <!-- Price Section (Brutalist with Hard Shadow) -->
    <div
        class="price-section absolute -bottom-10 left-1/2 -translate-x-1/2 w-full flex flex-col items-center z-40 group-hover:scale-105 sm:group-hover:scale-110 transition-transform duration-500"
    >
        <div
            class="relative px-3 sm:px-5 lg:px-6 py-1.5 sm:py-2.5 bg-white text-[#07194c] -rotate-2 border-2 sm:border-4 border-[#07194c] shadow-[4px_4px_0px_0px_rgba(232,189,13,0.8)] sm:shadow-[8px_8px_0px_0px_rgba(232,189,13,0.8)] transition-shadow duration-300 group-hover:shadow-[6px_6px_0px_0px_rgba(232,189,13,1)] sm:group-hover:shadow-[12px_12px_0px_0px_rgba(232,189,13,1)]"
        >
            <div class="flex items-baseline font-black leading-none">
                <span
                    class="text-sm sm:text-lg lg:text-xl self-start mt-1 sm:mt-2"
                    >$</span
                >
                <span class="text-3xl sm:text-4xl lg:text-5xl tracking-tight"
                    >{precio}</span
                >
                <span class="text-[10px] sm:text-xs lg:text-base ml-1">USD</span
                >
            </div>

            {
                precioAnterior && (
                    <div class="absolute -top-10 -right-4 sm:-top-2 sm:-right-6 bg-[#e8bd0d] text-[#07194c] text-[10px] sm:text-xs font-black px-2 py-0.5 sm:px-3 sm:py-1 rotate-12 line-through shadow-lg border border-black transform group-hover:rotate-6 transition-transform">
                        ANTES ${precioAnterior}
                    </div>
                )
            }
        </div>
    </div>
</div>

<style>
    .urban-card-wrapper {
        animation: urbanEntry 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
        font-family: "Aniko", sans-serif;
    }

    /* Stencil/Spray Highlighter */
    :global(.urban-marker) {
        position: relative;
        z-index: 1;
        display: inline-block;
        padding: 0 4px;
        font-family: "Base Neue", sans-serif;
    }

    :global(.urban-marker::before) {
        content: "";
        position: absolute;
        bottom: 2px;
        left: 0;
        width: 100%;
        height: 14px;
        background-color: var(--marker-color);
        z-index: -1;
        opacity: 0.8;
        transform: skewX(-15deg);
        filter: blur(px);
    }

    .urban-btn {
        clip-path: polygon(5% 0%, 100% 0%, 95% 100%, 0% 100%);
    }

    .noise-overlay {
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    }

    @keyframes urbanEntry {
        0% {
            opacity: 0;
            transform: translateY(30px) scale(0.95);
        }
        100% {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }
</style>
