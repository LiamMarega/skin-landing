---
const {
    tipo,
    clases,
    caracteristicas,
    precio,
    precioAnterior,
    badge,
    dataPlan,
    btnText,
    accentColor = "var(--accent)", // Use global accent color (Yellow)
    tapeImage = "/assets/resoures/tapes/tape_03.webp",
} = Astro.props;
---

<!-- Added mb-16 for mobile spacing, h-full for equal height flex items -->
<div
    class="urban-card-wrapper group relative w-full max-w-[440px] lg:max-w-[480px] mx-auto overflow-visible mb-16 lg:mb-0 flex flex-col justify-between max-h-[90vh]"
>
    {
        badge && (
            <div class="absolute -right-6 -top-6 sm:-right-10 sm:-top-10 w-20 h-20 sm:w-32 sm:h-32 z-30 opacity-90 group-hover:opacity-100 group-hover:scale-110 group-hover:rotate-[20deg] transition-all duration-500">
                <img
                    src={badge}
                    class="w-full h-full object-contain drop-shadow-2xl"
                    alt="badge"
                />
            </div>
        )
    }

    <img
        src="/assets/resoures/spray/spray_01.webp"
        alt=""
        loading="lazy"
        decoding="async"
        class="absolute -top-20 -left-10 lg:w-96 -z-10 group-hover:opacity-100 opacity-70 group-hover:scale-110 transition-all duration-300 pointer-events-none"
    />
    <img
        src="/assets/resoures/spray/spray_02.webp"
        alt=""
        loading="lazy"
        decoding="async"
        class="absolute -bottom-20 -left-10 lg:w-96 -z-10 group-hover:opacity-100 opacity-70 group-hover:scale-110 transition-all duration-300 pointer-events-none"
    />

    <!-- Urban Header -->
    <div class="urban-header relative z-20 shrink-0">
        <div
            class="header-content bg-[#0a0a0a] sm:py-6 lg:py-8 px-4 sm:px-6 border-b-2 border-white/10 rounded-t-3xl text-center"
        >
            <h2
                class="tipo-title text-2xl sm:text-3xl lg:text-5xl font-black text-white italic tracking-tight leading-none group-hover:scale-105 transition-transform duration-300"
                style="font-family: 'Base Neue', sans-serif;"
            >
                {tipo}
            </h2>
            <div
                class="flex items-center justify-center gap-2 sm:gap-3 mt-2 sm:mt-4"
            >
                <span
                    class="h-[2px] w-6 sm:w-10 bg-current opacity-70"
                    style={`color: ${accentColor}`}></span>
                <h3
                    class="clases-subtitle text-sm sm:text-base lg:text-xl font-bold uppercase tracking-[0.1em] sm:tracking-[0.15em]"
                    style={`color: ${accentColor}; font-family: 'Base Neue', sans-serif;`}
                >
                    {clases}
                </h3>
                <span
                    class="h-[2px] w-6 sm:w-10 bg-current opacity-70"
                    style={`color: ${accentColor}`}></span>
            </div>
        </div>
        <!-- Torn Edge Simulation -->
        <div
            class="torn-edge w-full h-3 sm:h-6 bg-[#0a0a0a] relative overflow-hidden -mt-[1px]"
        >
            <div
                class="absolute bottom-0 left-0 w-full h-full bg-[#111]"
                style="clip-path: polygon(0% 100%, 5% 20%, 10% 80%, 15% 30%, 20% 70%, 25% 40%, 30% 90%, 35% 20%, 40% 60%, 45% 10%, 50% 80%, 55% 30%, 60% 70%, 65% 40%, 70% 90%, 75% 20%, 80% 60%, 85% 10%, 90% 80%, 95% 30%, 100% 100%);"
            >
            </div>
        </div>
    </div>

    <!-- Urban Body (Flex grow to fill space) -->
    <div
        class="urban-body relative bg-[#111] px-4 sm:px-6 lg:px-8 pt-4 sm:pt-6 lg:pt-10 pb-16 sm:pb-20 lg:pb-24 border-x border-white/5 shadow-2xl overflow-hidden flex-grow flex flex-col"
        style="font-family: 'Aniko', sans-serif;"
    >
        <!-- Rugged Texture Overlay -->
        <div
            class="absolute inset-0 opacity-10 mix-blend-overlay pointer-events-none bg-[url('/assets/resoures/textures/texture_02.webp')] bg-cover"
        >
        </div>
        <div
            class="noise-overlay absolute inset-0 opacity-[0.05] pointer-events-none"
        >
        </div>

        <ul
            class="feature-list relative z-10 space-y-2 sm:space-y-3 lg:space-y-5 flex-grow"
        >
            {
                caracteristicas.map((item: any) => (
                    <li class="flex items-start gap-2 sm:gap-3 lg:gap-4 group/item">
                        <span
                            class="text-base sm:text-lg lg:text-2xl font-black leading-none mt-0.5 sm:mt-1 transition-transform group-hover/item:scale-125 duration-200 shrink-0"
                            style={`color: ${accentColor}`}
                        >
                            âœ“
                        </span>
                        <p
                            class="text-zinc-300 font-medium text-xs sm:text-sm lg:text-base leading-snug uppercase tracking-tight group-hover/item:text-white transition-colors"
                            set:html={item.texto.replace(
                                item.bold,
                                `<span class="urban-marker text-white font-black" style="--marker-color: ${accentColor}">${item.bold}</span>`,
                            )}
                        />
                    </li>
                ))
            }
        </ul>

        <!-- Urban CTA Button (Brutalist) -->
        <div class="mt-4 sm:mt-6 lg:mt-10 relative z-20">
            <button
                type="button"
                data-plan={dataPlan}
                class="urban-btn pricing-btn relative w-full py-2 sm:py-3 lg:py-4 bg-white text-[#07194c] font-black text-xs sm:text-base lg:text-lg uppercase tracking-tighter overflow-hidden transform group-hover:-translate-y-1 transition-all duration-300 border-2 sm:border-4 border-white shadow-[0_4px_0_rgba(0,0,0,0.5)] sm:shadow-[0_8px_0_rgba(0,0,0,0.5)] active:shadow-none active:translate-y-1"
                style="font-family: 'Base Neue', sans-serif;"
            >
                <span
                    class="relative z-10 group-hover:tracking-widest transition-all duration-300"
                    >{btnText || "APLICAR AHORA"}</span
                >
                <div
                    class="absolute inset-0 bg-linear-to-r from-transparent via-[#000]/10 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700"
                >
                </div>
            </button>
        </div>
    </div>

    <!-- Price Section (Brutalist with Hard Shadow) -->
    <div
        class="price-section absolute bottom-0 left-1/2 -translate-x-1/2 w-full flex flex-col items-center z-40 group-hover:scale-105 sm:group-hover:scale-110 transition-transform duration-500"
    >
        <div
            class="relative px-4 sm:px-6 lg:px-8 py-2 sm:py-3 bg-white text-[#07194c] -rotate-2 border-2 sm:border-4 border-[#07194c] shadow-[4px_4px_0px_0px_rgba(232,189,13,0.8)] sm:shadow-[8px_8px_0px_0px_rgba(232,189,13,0.8)] transition-shadow duration-300 group-hover:shadow-[6px_6px_0px_0px_rgba(232,189,13,1)] sm:group-hover:shadow-[12px_12px_0px_0px_rgba(232,189,13,1)]"
            style="font-family: 'Base Neue', sans-serif;"
        >
            <div class="flex items-baseline font-black leading-none">
                <span
                    class="text-lg sm:text-2xl lg:text-3xl self-start mt-1 sm:mt-2"
                    >$</span
                >
                <span class="text-4xl sm:text-6xl lg:text-7xl tracking-tight"
                    >{precio}</span
                >
                <span class="text-xs sm:text-base lg:text-xl ml-1">USD</span>
            </div>

            {
                precioAnterior && (
                    <div class="absolute -top-3 -right-4 sm:-top-5 sm:-right-6 bg-[#e8bd0d] text-[#07194c] text-[10px] sm:text-sm font-black px-2 py-0.5 sm:px-3 sm:py-1 rotate-12 line-through shadow-lg border border-black transform group-hover:rotate-6 transition-transform">
                        ANTES ${precioAnterior}
                    </div>
                )
            }
        </div>
    </div>

    <!-- Paint Drip Effect -->
    <div
        class="paint-drips w-full h-8 sm:h-10 lg:h-12 opacity-60 pointer-events-none relative z-10 -mt-[1px] shrink-0"
    >
        <svg
            viewBox="0 0 500 150"
            preserveAspectRatio="none"
            class="w-full h-full fill-[#111]"
        >
            <path d="M0,0 C150,150 350,0 500,100 L500,00 L0,0 Z"></path>
        </svg>
    </div>
</div>

<style>
    .urban-card-wrapper {
        animation: urbanEntry 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
        font-family: "Aniko", sans-serif;
    }

    /* Stencil/Spray Highlighter */
    :global(.urban-marker) {
        position: relative;
        z-index: 1;
        display: inline-block;
        padding: 0 4px;
        font-family: "Base Neue", sans-serif;
    }

    :global(.urban-marker::before) {
        content: "";
        position: absolute;
        bottom: 2px;
        left: 0;
        width: 100%;
        height: 14px;
        background-color: var(--marker-color);
        z-index: -1;
        opacity: 0.8;
        transform: skewX(-15deg);
        filter: blur(px);
    }

    .urban-btn {
        clip-path: polygon(5% 0%, 100% 0%, 95% 100%, 0% 100%);
    }

    .noise-overlay {
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    }

    @keyframes urbanEntry {
        0% {
            opacity: 0;
            transform: translateY(30px) scale(0.95);
        }
        100% {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }
</style>
