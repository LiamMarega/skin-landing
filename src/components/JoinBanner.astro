---
import AnimatedButton from "./ui/buttons/AnimatedButton.astro";
import { Icon } from "astro-icon/components";

const benefits = [
    {
        icon: "lucide:play-circle",
        title: "+350 ACTIVOS",
        description: "Domina el diseño de flyers con tutoriales paso a paso y más de 350 activos premium listos para usar en Photoshop.",
    },
    {
        icon: "lucide:video",
        title: "MENTORÍA EN VIVO",
        description: "Clases en directo y sesiones de corrección semanales para refinar tu técnica y asegurar resultados profesionales.",
    },
    {
        icon: "lucide:globe",
        title: "COMUNIDAD PRO",
        description: "Únete a una red de diseñadores enfocados en monetizar su talento y escalar sus ingresos mes a mes.",
    },
];
---

<section class="relative w-full bg-linear-to-b  py-16 lg:py-24 overflow-hidden">
    <!-- Background Glow -->
    <div class="absolute inset-0 bg-primary/5 blur-[100px] pointer-events-none"></div>

    <div class="max-w-[1600px] mx-auto px-6 md:px-12 w-full relative z-10">
        <div class="flex flex-col xl:flex-row items-center justify-between gap-12 xl:gap-20">
            
            <!-- Left Side: CTA -->
            <div class="w-full xl:w-1/3 flex flex-col items-center xl:items-start text-center xl:text-left space-y-8 ">
                <h2 class="text-4xl md:text-2xl lg:text-4xl font-display font-black uppercase italic tracking-tighter leading-9">
                    <span class="text-white block mb-2 w-full">ÚNETE HOY Y</span>
                    <span class="text-transparent px-2 -ml-2 pb-1 bg-clip-text bg-linear-to-r from-accent to-accent drop-shadow-[0_0_15px_rgba(232,189,13,0.4)]">
                        OBTÉNE ACCESO <br/> INSTANTÁNEO A
                    </span>
                </h2>
                
                <div class="mt-4">
                    <AnimatedButton 
                        title="UNIRME A LA COMUNIDAD"
                        class="text-base md:text-lg px-8 py-4 bg-white text-black hover:bg-gray-200"
                    />
                </div>
            </div>

            <!-- Right Side: Benefit Cards -->
            <div class="w-full xl:w-2/3 grid grid-cols-1 md:grid-cols-3 gap-6">
                {benefits.map((benefit, index) => (
                    <div class="group relative z-10">
                    
                      
                        <div class="relative h-full bg-black  border border-white/10 p-8 rounded-2xl hover:border-yellow-500/50 transition-all duration-500 hover:-translate-y-2 hover:shadow-[0_20px_40px_-15px_rgba(234,179,8,0.3)] flex flex-col items-center text-center space-y-4">
                            <!-- Icon -->
                            <div class="text-yellow-500 mb-2">
                                <Icon name={benefit.icon} class="w-12 h-12" />
                            </div>
                            
                            <h3 class="text-2xl font-bold text-yellow-500 uppercase tracking-wide">
                                {benefit.title}
                            </h3>
                            
                            <p class="text-sm md:text-base text-gray-400 font-medium leading-relaxed">
                                {benefit.description}
                            </p>
                        </div>
                    </div>
                ))}

                  
            </div>
            
        </div>
    </div>
                       <img
                            src="/assets/resoures/spray/spray_01.webp"
                            alt=""
                            loading="lazy"
                            decoding="async"
                            class="absolute -top-10 -left-20 sm:-left-40 -rotate-90 w-48 lg:w-96 -z-10 opacity-70 group-hover:opacity-40 group-hover:scale-110 transition-all duration-700 pointer-events-none hidden sm:block"
                        />
                     
    <img
                   src="/assets/resoures/spray/spray_01.webp"
                   alt=""
                   loading="lazy"
                   decoding="async"
                   class="absolute top-0 -right-16 sm:-right-32 w-48 lg:w-96 -z-10 opacity-70 group-hover:opacity-40 group-hover:scale-110 transition-all duration-700 pointer-events-none hidden sm:block"
               />
   
               <img
                   src="/assets/resoures/spray/spray_02.webp"
                   alt=""
                   loading="lazy"
                   decoding="async"
                   class="absolute -bottom-14 -right-10 sm:-right-20 w-48 lg:w-96 scale-x-125 -z-10 opacity-70 group-hover:opacity-40 group-hover:scale-110 transition-all duration-700 pointer-events-none hidden sm:block"
               />

   
</section>
