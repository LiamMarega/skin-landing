    <div class="max-w-4xl mx-auto px-6 relative z-10">
        <!-- Header -->
        <h2
            class="text-4xl md:text-5xl font-black text-center mb-16 text-transparent bg-clip-text bg-linear-to-r from-blue-500 to-white uppercase italic tracking-tighter"
