---
interface Props {
    items: string[];
}

const { items } = Astro.props;
---

<ul class="flex flex-col gap-2.5 sm:gap-5 items-start">
    {
        items.map((item) => {
            const hasParentheses = item.includes("(");
            const mainText = hasParentheses ? item.split("(")[0].trim() : item;
            const subText = hasParentheses ? "(" + item.split("(")[1] : "";

            return (
                <li class="flex items-start gap-2.5 sm:gap-4 mb-0.5 sm:mb-1">
                    <div class="shrink-0 mt-0.5 sm:mt-1">
                        <div class="flex items-center justify-center w-5 h-5 sm:w-7 sm:h-7 rounded-full bg-green-600/60 shadow-[0_0_8px_rgba(22,163,74,0.6)] sm:shadow-[0_0_12px_rgba(22,163,74,0.6)]">
                            <svg
                                class="h-4 w-4 sm:h-6 sm:w-6 text-green-400"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                                stroke-width="4.5"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M5 13l4 4L19 7"
                                />
                            </svg>
                        </div>
                    </div>
                    <div class="flex flex-col">
                        <span class="text-[13px] sm:text-[17px] font-normal tracking-wide text-white uppercase  leading-[1.1]">
                            {mainText}
                        </span>
                        {subText && (
                            <span class="text-[11px] sm:text-[15px] font-normal tracking-wide text-accent  leading-[1.1]">
                                {subText}
                            </span>
                        )}
                    </div>
                </li>
            );
        })
    }
</ul>
