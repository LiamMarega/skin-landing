---
import { Star, Briefcase, ShieldCheck } from "lucide-react";

interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<div
    class:list={[
        "relative w-full max-w-5xl mx-auto backdrop-blur-md bg-white/5 border border-white/10 rounded-2xl p-6 md:p-8 flex flex-col md:flex-row justify-between items-start md:items-center gap-6 md:gap-0 shadow-lg",
        className,
    ]}
>
    <!-- Section 1: Reviews -->
    <div class="flex flex-col gap-2 flex-1 w-full md:w-auto">
        <div class="flex items-center gap-1">
            {
                Array.from({ length: 5 }).map((_, i) => (
                    <Star className="w-5 h-5 fill-yellow-400 text-yellow-400" />
                ))
            }
            <span class="ml-2 text-white font-semibold">Más de 300</span>
        </div>
        <p class="text-white/80 text-sm md:text-base leading-tight">
            diseñadores ya usan este sistema
        </p>
    </div>

    <!-- Divider -->
    <div class="hidden md:block w-px h-12 bg-white/10 mx-6"></div>

    <!-- Section 2: Real Cases -->
    <div class="flex items-center gap-4 flex-1 w-full md:w-auto">
        <div
            class="p-3 rounded-lg bg-white/5 border border-white/10 text-purple-400"
        >
            <Briefcase className="w-6 h-6" />
        </div>
        <div>
            <h3 class="text-white font-bold text-lg">Casos reales:</h3>
            <p class="text-white/60 text-sm">
                Diseñadores trabajando en eventos
            </p>
        </div>
    </div>

    <!-- Divider -->
    <div class="hidden md:block w-px h-12 bg-white/10 mx-6"></div>

    <!-- Section 3: Proven Method -->
    <div class="flex items-center gap-4 flex-1 w-full md:w-auto">
        <div
            class="p-3 rounded-lg bg-white/5 border border-white/10 text-purple-400"
        >
            <ShieldCheck className="w-6 h-6" />
        </div>
        <div>
            <h3 class="text-white font-bold text-lg">Método probado</h3>
            <p class="text-white/60 text-sm">paso a paso</p>
        </div>
    </div>

    <!-- Background Glow Effect (Optional/Subtle) -->
    <div
        class="absolute inset-0 rounded-2xl bg-linear-to-r from-purple-500/5 to-blue-500/5 pointer-events-none"
    >
    </div>
</div>
