---
interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<div
    class:list={[
        "relative w-full max-w-screen mx-auto",
        "bg-white/10 backdrop-blur-2xl saturate-150",
        "border border-white/50 rounded-2xl p-6 md:p-8",
        "flex flex-col md:flex-row justify-between items-start md:items-center gap-8 md:gap-0",
        "shadow-[0_20px_50px_rgba(0,0,0,1),inset_0_1px_1px_rgba(255,255,255,1),inset_0_-1px_1px_rgba(0,0,0,1)]",
        "overflow-hidden group hover:border-white/20 transition-all duration-500",
        "before:absolute before:inset-0 before:bg-linear-to-br before:from-white/10 before:via-transparent ",
        className,
    ]}
>
    <!-- Section 1: Reviews -->
    <div
        class="relative z-10 flex flex-col gap-2 flex-1 w-full md:w-auto group/item"
    >
        <div class="flex items-center gap-1.5">
            <div class="flex gap-0.5">
                {
                    Array.from({ length: 5 }).map(() => (
                        <svg
                            class="w-5 h-5 fill-accent text-accent drop-shadow-[0_0_8px_rgba(232,189,13,0.5)]"
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
                        </svg>
                    ))
                }
            </div>
            <span class="ml-2 text-white font-bold tracking-tight text-lg"
                >Más de 50</span
            >
        </div>
        <p class="text-white/70 text-sm md:text-base font-medium leading-tight">
            diseñadores ya usan este sistema
        </p>
    </div>

    <!-- Divider with Gradient -->
    <div
        class="hidden md:block w-px h-16 bg-linear-to-b from-transparent via-white/20 to-transparent mx-8"
    >
    </div>

    <!-- Section 2: Real Cases -->
    <div
        class="relative z-10 flex items-center gap-5 flex-1 w-full md:w-auto group/item"
    >
        <div
            class="relative p-3.5 rounded-xl bg-white/5 border border-white/10 text-purple-400 shadow-[inset_0_0_20px_rgba(168,85,247,0.1)] group-hover/item:border-purple-500/30 group-hover/item:bg-purple-500/10 transition-all duration-300"
        >
            <svg
                class="w-7 h-7 drop-shadow-[0_0_10px_rgba(168,85,247,0.5)]"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path d="M16 20V4a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"
                ></path><rect width="20" height="14" x="2" y="6" rx="2"
                ></rect></svg
            >
        </div>
        <div>
            <h3 class="text-white font-bold text-lg tracking-tight">
                Casos reales:
            </h3>
            <p class="text-white/60 text-sm font-medium">
                Diseñadores trabajando con marcas y creadores
            </p>
        </div>
    </div>

    <!-- Divider with Gradient -->
    <div
        class="hidden md:block w-px h-16 bg-linear-to-b from-transparent via-white/20 to-transparent mx-8"
    >
    </div>

    <!-- Section 3: Proven Method -->
    <div
        class="relative z-10 flex items-center gap-5 flex-1 w-full md:w-auto group/item"
    >
        <div
            class="relative p-3.5 rounded-xl bg-white/5 border border-white/10 text-blue-400 shadow-[inset_0_0_20px_rgba(59,130,246,0.1)] group-hover/item:border-blue-500/30 group-hover/item:bg-blue-500/10 transition-all duration-300"
        >
            <svg
                class="w-7 h-7 drop-shadow-[0_0_10px_rgba(59,130,246,0.5)]"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path
                    d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"
                ></path><path d="m9 12 2 2 4-4"></path></svg
            >
        </div>
        <div>
            <h3 class="text-white font-bold text-lg tracking-tight">
                Sistema probado
            </h3>
            <p class="text-white/60 text-sm font-medium">paso a paso</p>
        </div>
    </div>

    <!-- Bottom Glow Bar -->
    <div
        class="absolute bottom-0 left-1/2 -translate-x-1/2 w-1/2 h-px bg-linear-to-r from-transparent via-accent/50 to-transparent blur-[1px]"
    >
    </div>
</div>
