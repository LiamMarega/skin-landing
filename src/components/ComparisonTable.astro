<section class="relative w-full py-24 bg-black font-sans">
    <div class="max-w-5xl mx-auto px-6">
        <h2
            class="text-3xl md:text-5xl font-black text-center mb-16 text-white uppercase italic tracking-tighter"
        >
            Comparación <span class="text-blue-500">Rápida</span>
        </h2>

        <div
            class="overflow-x-auto relative shadow-2xl rounded-2xl border border-white/10"
        >
            <!-- Table Glow -->
            <div
                class="absolute top-0 right-0 w-64 h-64 bg-blue-600/10 rounded-full blur-[80px] pointer-events-none"
            >
            </div>

            <table class="w-full text-left border-collapse min-w-[600px]">
                <thead>
                    <tr class="bg-zinc-900/50">
                        <th
                            class="p-6 text-gray-400 font-bold uppercase tracking-wider text-sm border-b border-white/10"
                            >Características</th
                        >
                        <th
                            class="p-6 text-white font-black uppercase tracking-wider text-lg border-b border-white/10 text-center w-1/4"
                            >Masterclass</th
                        >
                        <th
                            class="p-6 text-yellow-400 font-black uppercase tracking-wider text-lg border-b border-white/10 text-center bg-yellow-400/5 w-1/4"
                            >Programa Premium</th
                        >
                    </tr>
                </thead>
                <tbody class="text-gray-300 divide-y divide-white/5">
                    <!-- Row 1 -->
                    <tr class="hover:bg-white/5 transition-colors">
                        <td class="p-5 font-medium">Cantidad de clases</td>
                        <td class="p-5 text-center font-bold text-white">1</td>
                        <td
                            class="p-5 text-center font-bold text-yellow-400 bg-yellow-400/5"
                            >3</td
                        >
                    </tr>
                    <!-- Row 2 -->
                    <tr class="hover:bg-white/5 transition-colors">
                        <td class="p-5 font-medium">En vivo por videollamada</td
                        >
                        <td class="p-5 text-center text-red-400 font-bold"
                            >NO</td
                        >
                        <td
                            class="p-5 text-center text-green-400 font-bold bg-yellow-400/5"
                            >SÍ</td
                        >
                    </tr>
                    <!-- Row 3 -->
                    <tr class="hover:bg-white/5 transition-colors">
                        <td class="p-5 font-medium">Formato</td>
                        <td class="p-5 text-center font-bold">Grabada</td>
                        <td
                            class="p-5 text-center font-bold text-white bg-yellow-400/5"
                            >Zoom/Meet</td
                        >
                    </tr>
                    <!-- Row 4 -->
                    <tr class="hover:bg-white/5 transition-colors">
                        <td class="p-5 font-medium">Grabación incluida</td>
                        <td class="p-5 text-center text-green-400 font-bold"
                            >SÍ</td
                        >
                        <td
                            class="p-5 text-center text-green-400 font-bold bg-yellow-400/5"
                            >SÍ</td
                        >
                    </tr>
                    <!-- Row 5 -->
                    <tr class="hover:bg-white/5 transition-colors">
                        <td class="p-5 font-medium">Recursos descargables</td>
                        <td class="p-5 text-center text-green-400 font-bold"
                            >SÍ</td
                        >
                        <td
                            class="p-5 text-center text-green-400 font-bold bg-yellow-400/5"
                            >SÍ</td
                        >
                    </tr>
                    <!-- Row 6 -->
                    <tr class="hover:bg-white/5 transition-colors">
                        <td class="p-5 font-medium"
                            >Plantillas + recursos premium</td
                        >
                        <td class="p-5 text-center text-red-400 font-bold"
                            >NO</td
                        >
                        <td
                            class="p-5 text-center text-green-400 font-bold bg-yellow-400/5"
                            >SÍ</td
                        >
                    </tr>
                    <!-- Row 7 -->
                    <tr class="hover:bg-white/5 transition-colors">
                        <td class="p-5 font-medium">Tareas entre clases</td>
                        <td class="p-5 text-center text-red-400 font-bold"
                            >NO</td
                        >
                        <td
                            class="p-5 text-center text-green-400 font-bold bg-yellow-400/5"
                            >SÍ</td
                        >
                    </tr>
                    <!-- Row 8 -->
                    <tr class="hover:bg-white/5 transition-colors">
                        <td class="p-5 font-medium">Correcciones / feedback</td>
                        <td class="p-5 text-center text-red-400 font-bold"
                            >NO</td
                        >
                        <td
                            class="p-5 text-center text-green-400 font-bold bg-yellow-400/5"
                            >SÍ</td
                        >
                    </tr>
                    <!-- Row 9 (Final) -->
                    <tr class="bg-blue-900/20">
                        <td class="p-5 font-bold text-blue-200">Ideal para</td>
                        <td
                            class="p-5 text-center font-bold text-white text-sm uppercase"
                            >Subir de nivel rápido</td
                        >
                        <td
                            class="p-5 text-center font-bold text-yellow-400 bg-yellow-400/10 text-sm uppercase"
                            >Transformación completa</td
                        >
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</section>
