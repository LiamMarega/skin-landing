---
import { Icon } from "astro-icon/components";
---

<section id="comparison" class="relative w-full py-24 bg-black font-sans">
    <div class="max-w-6xl mx-auto px-6">
        <h2
            class="text-4xl md:text-5xl font-black text-center mb-16 text-white uppercase italic tracking-tighter"
        >
            ¿Qué incluye la mentoría <span class="text-blue-500"
                >Diseñá como yo</span
            >?
        </h2>

        <div
            class="relative group bg-zinc-950/50 backdrop-blur-xl border border-white/10 rounded-3xl overflow-hidden shadow-[0_0_50px_rgba(0,0,0,0.5)]"
        >
            <!-- Decorative Glows -->
            <div
                class="absolute top-0 right-0 w-96 h-96 bg-blue-600/5 rounded-full blur-[100px] pointer-events-none"
            >
            </div>
            <div
                class="absolute bottom-0 left-0 w-96 h-96 bg-purple-600/5 rounded-full blur-[100px] pointer-events-none"
            >
            </div>

            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse min-w-[700px]">
                    <thead>
                        <tr class="bg-white/2">
                            <th
                                class="p-8 text-gray-500 font-bold uppercase tracking-[0.2em] text-xs border-b border-white/5"
                                >Características</th
                            >
                            <th
                                class="p-8 text-white font-black uppercase tracking-tight text-xl border-b border-white/5 text-center bg-blue-500/5"
                                >Plan Básico</th
                            >
                            <th
                                class="p-8 text-yellow-400 font-black uppercase tracking-tight text-xl border-b border-white/5 text-center bg-yellow-400/5"
                                >Plan Pro</th
                            >
                        </tr>
                    </thead>
                    <tbody
                        class="text-gray-300 divide-y divide-white/5 font-medium"
                    >
                        <tr class="bg-white/[0.01] transition-colors">
                            <td class="p-6 pl-8 font-bold"
                                >Clases en vivo (90-120 min)</td
                            >
                            <td class="p-6 text-center text-white">4 clases</td>
                            <td
                                class="p-6 text-center text-yellow-400 bg-yellow-400/2"
                                >4 clases</td
                            >
                        </tr>
                        <tr class="bg-white/1 transition-colors">
                            <td class="p-6 pl-8 font-bold"
                                >Tutoriales grabados & Clips</td
                            >
                            <td class="p-6 text-center text-white"
                                >4 tutoriales</td
                            >
                            <td
                                class="p-6 text-center text-yellow-400 bg-yellow-400/2"
                                >4 tutoriales</td
                            >
                        </tr>
                        <tr class="bg-white/1 transition-colors">
                            <td class="p-6 pl-8 font-bold"
                                >Llamadas de correcciones</td
                            >
                            <td class="p-6 text-center text-white"
                                >4 llamadas</td
                            >
                            <td
                                class="p-6 text-center text-yellow-400 bg-yellow-400/2"
                                >4 llamadas</td
                            >
                        </tr>
                        <tr class="bg-white/1 transition-colors">
                            <td class="p-6 pl-8 font-bold"
                                >Comunidad (WhatsApp + Discord)</td
                            >
                            <td
                                class="p-6 text-center text-green-500 flex justify-center"
                            >
                                <Icon name="lucide:check" class="w-6 h-6" />
                            </td>
                            <td
                                class="p-6 text-center text-green-500 bg-yellow-400/2"
                            >
                                <div class="flex justify-center">
                                    <Icon name="lucide:check" class="w-6 h-6" />
                                </div>
                            </td>
                        </tr>
                        <tr class="bg-white/1 transition-colors">
                            <td class="p-6 pl-8 font-bold"
                                >Recursos & Assets Premium</td
                            >
                            <td
                                class="p-6 text-center text-green-500 flex justify-center"
                            >
                                <Icon name="lucide:check" class="w-6 h-6" />
                            </td>
                            <td
                                class="p-6 text-center text-green-500 bg-yellow-400/2"
                            >
                                <div class="flex justify-center">
                                    <Icon name="lucide:check" class="w-6 h-6" />
                                </div>
                            </td>
                        </tr>
                        <tr class="bg-white/1 transition-colors">
                            <td class="p-6 pl-8 font-bold"
                                >Portfolio listo + Oferta</td
                            >
                            <td
                                class="p-6 text-center text-green-500 flex justify-center"
                            >
                                <Icon name="lucide:check" class="w-6 h-6" />
                            </td>
                            <td
                                class="p-6 text-center text-green-500 bg-yellow-400/2"
                            >
                                <div class="flex justify-center">
                                    <Icon name="lucide:check" class="w-6 h-6" />
                                </div>
                            </td>
                        </tr>
                        <tr class="bg-white/1 transition-colors">
                            <td class="p-6 pl-8 font-bold"
                                >Llamadas 1:1 Personalizadas</td
                            >
                            <td
                                class="p-6 text-center text-red-500/50 flex justify-center"
                            >
                                <Icon name="lucide:x" class="w-6 h-6" />
                            </td>
                            <td
                                class="p-6 text-center text-green-500 bg-yellow-400/2"
                            >
                                <div
                                    class="flex justify-center flex-col items-center"
                                >
                                    <Icon
                                        name="lucide:check"
                                        class="w-6 h-6 mb-1"
                                    />
                                    <span class="text-xs font-bold uppercase"
                                        >2 llamadas (45 min)</span
                                    >
                                </div>
                            </td>
                        </tr>
                        <tr class="bg-white/1 transition-colors">
                            <td class="p-6 pl-8 font-bold"
                                >Armado de Oferta/Pack Personalizado</td
                            >
                            <td
                                class="p-6 text-center text-red-500/50 flex justify-center"
                            >
                                <Icon name="lucide:x" class="w-6 h-6" />
                            </td>
                            <td
                                class="p-6 text-center text-green-500 bg-yellow-400/2"
                            >
                                <div class="flex justify-center">
                                    <Icon name="lucide:check" class="w-6 h-6" />
                                </div>
                            </td>
                        </tr>
                        <tr class="bg-white/1 transition-colors">
                            <td class="p-6 pl-8 font-bold"
                                >Prioridad en soporte</td
                            >
                            <td
                                class="p-6 text-center text-red-500/50 flex justify-center"
                            >
                                <Icon name="lucide:x" class="w-6 h-6" />
                            </td>
                            <td
                                class="p-6 text-center text-green-500 bg-yellow-400/2"
                            >
                                <div class="flex justify-center">
                                    <Icon name="lucide:check" class="w-6 h-6" />
                                </div>
                            </td>
                        </tr>
                        <tr class="bg-white/2">
                            <td
                                class="p-8 pl-8 font-black text-white italic uppercase tracking-tighter text-lg"
                                >Inversión</td
                            >
                            <td class="p-8 text-center">
                                <div class="flex flex-col items-center">
                                    <span class="text-3xl font-black text-white"
                                        >$300</span
                                    >
                                    <span
                                        class="text-xs text-gray-500 italic uppercase font-bold tracking-widest mt-1"
                                        >USD</span
                                    >

                                    <button
                                        type="button"
                                        data-plan="basic"
                                        class="comparison-cta pricing-btn mt-6 px-8 py-3 bg-white text-black font-black text-sm uppercase tracking-widest clip-btn hover:bg-blue-500 hover:text-white transition-all transform hover:-translate-y-1 active:translate-y-0 shadow-[0_4px_0_rgba(0,0,0,0.5)] active:shadow-none cursor-pointer"
                                        style="font-family: 'Base Neue', sans-serif;"
                                    >
                                        UNIRSE
                                    </button>
                                </div>
                            </td>
                            <td class="p-8 text-center bg-yellow-400/10">
                                <div class="flex flex-col items-center">
                                    <span
                                        class="text-3xl font-black text-yellow-500"
                                        >$600</span
                                    >
                                    <span
                                        class="text-xs text-yellow-600 italic uppercase font-bold tracking-widest mt-1"
                                        >USD</span
                                    >

                                    <button
                                        type="button"
                                        data-plan="pro"
                                        class="comparison-cta pricing-btn mt-6 px-8 py-3 bg-yellow-400 text-black font-black text-sm uppercase tracking-widest clip-btn hover:bg-white transition-all transform hover:-translate-y-1 active:translate-y-0 shadow-[0_4px_0_rgba(0,0,0,0.5)] active:shadow-none cursor-pointer"
                                        style="font-family: 'Base Neue', sans-serif;"
                                    >
                                        UNIRSE PRO
                                    </button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <p
            class="mt-8 text-center text-gray-500 text-sm font-medium italic opacity-50"
        >
            * Los precios están en dólares estadounidenses. Consultá por moneda
            local en WhatsApp.
        </p>
    </div>
</section>

<style>
    .clip-btn {
        clip-path: polygon(8% 0%, 100% 0%, 92% 100%, 0% 100%);
    }
</style>

<script>
    function initComparisonButtons() {
        const buttons = document.querySelectorAll(".comparison-cta");
        buttons.forEach((btn) => {
            const cta = btn as HTMLElement;
            cta.addEventListener("click", (e) => {
                e.preventDefault();
                e.stopPropagation();
                const plan = cta.dataset.plan || "basic";
                if (window.openLeadModal) {
                    window.openLeadModal(plan);
                } else {
                    console.error("LeadModal API not found on window");
                }
            });
        });
    }

    // Run on load and after view transitions if applicable
    initComparisonButtons();
</script>
