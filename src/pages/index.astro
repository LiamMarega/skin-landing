			]}
			backgroundColor="#000e51"
			highlightColor="#ffb400"
			interval={5000}
			animationType="slide-vertical"
		/>
		<GradualBlur
			client:load
			target="page"
			position="bottom"
			height="6rem"
			strength={1}
			divCount={2}
			curve="bezier"
			exponential
			opacity={1}
		/>
		<BlobCursor client:load />
		<!-- Global Lead Capture Modal -->
		<LeadModal />
	</body>
</html>
